<Window x:Class="Terminal.Views.ChildWindows.AllertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ошибка" Height="200" Width="250"
        Background="Snow"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.1*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.7*"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Margin="0,5,0,0">
            <Image.Source>
                <BitmapImage UriSource="pack://application:,,,/Resources/alert_5407.png" />
            </Image.Source>
            
        </Image>
        <TextBlock Grid.Row="1"   Name="LabelError"  FontFamily="Arial" FontSize="12" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0,10,0">
            Невозможно выбрать инструмент. Стакан с таким инструментом уже существует.</TextBlock>
        <Button Grid.Row="2" Content="OK" Name="ButtonOK" HorizontalAlignment="Center" VerticalAlignment="Center" Width="60" Height="25" />

    </Grid>
</Window>
