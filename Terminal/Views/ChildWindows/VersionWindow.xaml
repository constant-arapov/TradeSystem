<Window x:Class="Terminal.Views.ChildWindows.VersionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         Height="300" Width="330"
        WindowStyle="None"
        >
    <DockPanel>

       

      

        <Image DockPanel.Dock="Top" Grid.Row="0" Margin="0,0,0,0">
            <Image.Source>
                <BitmapImage UriSource="pack://application:,,,/Resources/ctc_logo_desktop_30pcnt.jpg" />
            </Image.Source>

        </Image>

        <TextBlock DockPanel.Dock="Top"  HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="26" FontWeight="Black" Height="30">Терминал CTC</TextBlock>
        <TextBlock DockPanel.Dock="Top" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="14" x:Name="TextblockVersion" Margin="0,10,0,0">0.0.0</TextBlock>
        <TextBlock DockPanel.Dock="Top" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="8" x:Name="TextblockTime">2017-10-31 15:12</TextBlock>
        <Button  DockPanel.Dock="Bottom" VerticalAlignment="Bottom" Margin="0,0,0,10" Width="60" Height="30" Content="OK" Click="Button_Click"/>
        
    </DockPanel>
</Window>
