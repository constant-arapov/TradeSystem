        <Border Border.BorderBrush="#FF0000FF" Border.BorderThickness="0.5" Border.CornerRadius="0,0,0,0" Grid.Column="0" Border.Background="#FF0000FF" UIElement.Opacity="0.4" />
  
    </Grid>
